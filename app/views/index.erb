<div class="title">
  <h1><span class="glyphicon glyphicon-home"></span>  Rate My Landlord</h1> 
</div>

<div class="row">
  <div class="col-sm-6 search-form">
    <div class="panel panel-primary">
      <div class="panel-heading">Search By Name</div>
      <div class="panel-body">
        
        <form method="get" action="/landlords">
          <div class="form-group">
            <label for="">Name:</label>
            <input type="text" class="form-control" id="" name="name" required>
          </div>
          <div class="form-group btn-login">
            <button type="submit" class="btn btn-submit">Search</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <div class="search-form col-sm-6 ">
    <div class="panel panel-primary">
      <div class="panel-heading">Search By Address</div>
      <div class="panel-body">
        
        <form method="get" action="/landlords">
          <div class="form-group">
            <label for="">Street Number:</label>
            <input type="text" class="form-control" id="" name="street_number" maxlength="8">
          </div>

          <div class="form-group">
            <label for="">Street Name:</label>
              <input type="text" class="form-control" id="" name="street_name" maxlength="30">
          </div>

          <div class="form-group">
            <label for="">City:</label>
              <input type="text" class="form-control" id="" name="city" maxlength="30" required>
          </div>

          <div class="form-group btn-login">
            <button type="submit" class="btn btn-submit">Search</button>
          </div>
        </form>

      </div>
    </div>
  </div>

</div>