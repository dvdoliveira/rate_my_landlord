<div class="well">
	<form method="post" action="/landlords/<%=params[:id]%>/addresses">

		<input style="display: none;" type="text" name="landlord_id" value="<%=params[:id]%>">

		<div class="form-group">
			<label style="color: black;">Unit Number:</label></br>
			<input type="text" class="form-control" name="unit_number" maxlength="8">
		</div>

		<div class="form-group">
			<label style="color: black;">Street Number:</label></br>
			<input type="text" class="form-control" name="street_number" maxlength="8" required>
		</div>

		<div class="form-group">
			<label style="color: black;">Street Name:</label></br>
			<input type="text" class="form-control" name="street_name" required>
		</div>

		<div class="form-group">
			<label style="color: black;">City:</label></br>
			<input type="text" class="form-control" name="city" required> </br>
			<input type="submit" class="btn btn-default btn-form" value="Add Address" style="float: left;">
			<br/>
		</div>
	</form>
</div>

		