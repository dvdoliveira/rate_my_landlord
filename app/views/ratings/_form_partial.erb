<label>Would you have a beer with your landlord?</label>

<img src="/images/empty-beer-icon.png" data-swap="/images/beer-icon.png" id="bg" style="width: 25%; height: 25%; margin-left: 35%; max-width:150px;" /> </br>
<script>
  $(function() {
      $('#bg').click(function(){
        var current_src = $(this).attr("src");
        var swap_src = $(this).attr("data-swap");
        $(this).attr("src", swap_src).attr("data-swap", current_src);
        if($(this).attr("src") == "/images/beer-icon.png") {
          $("#friendly").val(true);
        }
        else {
          $("#friendly").val(false);
        }
      });
  });
</script>

<input type="hidden" value="friendly" id="friendly" name="friendly"/>
